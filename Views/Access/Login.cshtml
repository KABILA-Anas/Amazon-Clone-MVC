@{
	Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ECommerce.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="flex items-center justify-center mx-auto h-dvh w-dvw bg-gradient-to-r from-indigo-500 to-pink-500">
        <div class="rounded-3xl px-12 py-28 bg-white" style="margin-top: 130px; margin-bottom: 137px">
            <div class="flex flex-col items-center justify-center">
                <div class="flex flex-col items-center justify-center">
                    <h1 class="text-4xl font-semibold text-violet-950 py-3">Welcome Back!</h1>
                </div>
                <div class="flex flex-col items-center justify-center">
					<form method="post" asp-controller="Access" asp-action="Login" class="flex flex-col items-center justify-center">
                        <div class="flex flex-col items-center justify-center">
							<input type="email" name="email" id="email" placeholder="email" class="w-96 h-12 px-4 py-2 mt-4 text-lg text-gray-700 placeholder-gray-400 border border-gray-300 rounded-3xl focus:outline-none focus:border-blue-500" placeholder="Enter email">
							<input type="password" name="password" id="password" placeholder="password" class="w-96 h-12 px-4 py-2 mt-4 text-lg text-gray-700 placeholder-gray-400 border border-gray-300 rounded-3xl focus:outline-none focus:border-blue-500" placeholder="Enter password">
                        </div>
					@if (ViewData["Error"] != null)
					{
						<div class="mb-4">
							<p class="text-red-500">@ViewData["Error"]</p>
						</div>
					}
                        <div class="flex flex-col items-center justify-center">
                            <button type="submit" class="w-96 h-12 px-4 py-2 mt-4 text-lg bg-violet-950 text-white rounded-3xl hover:bg-violet-900 focus:outline-none focus:bg-violet-900">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>

</body>
</html>
